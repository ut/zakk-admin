.row
  .large-9.columns{:role => "content"}
    %h1 programs
  .large-3.columns.right
    = link_to new_admin_program_path, :class => 'button tiny' do
      %i.fi-plus
      Program anlegen
.row
  .large-12.columns{:role => "content"}
    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th
            %th Title
            %th Description
            %th Events
            %th Current?/Published

            %th
            %th

        %tbody
          - @programs.each do |program|
            - klass = ''
            - if program.current
              - klass += 'current '
            - if program.published
              - klass += 'published'
            %tr{:class=>klass}
              %td
                - if program.image.url
                  <img src="#{program.image.medium_thumb.url}">
                - elsif program.published
                  #{image_tag('zakk_pattern1.png', :class => "medium_thumb")}
                - else
                  #{image_tag('zakk_pattern2.png', :class => "medium_thumb")}
              %td
                %h4
                  = link_to admin_program_path(program) do
                    = program.title
              %td= program.description
              %td= program.posts.count
              %td
                - if program.current
                  %span.label
                    CURRENT
                %br
                - if program.published
                  %i.fi-check
                - else
                  %i.fi-x

              %td
                = link_to edit_admin_program_path(program), :class=>"button tiny" do
                  %i.fi-plus
                  Bearbeiten
              %td
                = link_to [:admin,program], :data => { confirm: 'Wirklich löschen?' }, :method => :delete, :class=>"button tiny alert" do
                  %i.fi-x
                  Löschen