%h1 Listing pages

%table
  %thead
    %tr
      %th Title
      %th Description
      %th Published
      %th In menu
      %th
      %th
      %th

  %tbody
    - @pages.each do |page|
      %tr
        %td= page.title
        %td= page.description
        %td= page.published
        %td= page.in_menu
        %td= link_to 'Show', admin_page_path(page)
        %td= link_to 'Edit', edit_admin_page_path(page)
        %td= link_to 'Destroy', admin_page_path(page), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

