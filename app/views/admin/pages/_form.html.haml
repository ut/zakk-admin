= simple_form_for [:admin,@page] do |f|
  .row
    .large-12.columns
      = f.error_notification
  .row
    .large-3.columns
      &nbsp;
    .large-6.columns
      .row
        .large-2.columns
          .field
            = f.label :published
            = f.check_box :published
        .large-2.columns
          .field
            = f.label :in_menu
            = f.check_box :in_menu
        .large-6.columns
          &nbsp;
      .field
        = f.label :title
        = f.text_field :title
      .field
        = f.input :description
      .actions
        = f.button :submit, :class=>"button large"
    .large-3.columns
      &nbsp;

