= simple_form_for ([:admin, @page]) do |f|
  .row
    .large-12.columns
      = f.error_notification
  .row
    .large-3.columns
      &nbsp;
    .large-6.columns
      .row
        .large-2.columns
          .field
            = f.label :published
            = f.check_box :published
        .large-2.columns
          .field
            = f.label :in_menu
            = f.check_box :in_menu
        .large-6.columns
          &nbsp;
      .field
        = f.label :title
        = f.text_field :title
      .field
        = f.input :description
    .large-3.columns
      &nbsp;

  .row
    .large-4.columns
      = render partial: "content", locals: { f: f, p: @page, col: 1 }
    .large-4.columns
      = render partial: "content", locals: { f: f, p: @page, col: 2 }
    .large-4.columns
      = render partial: "content", locals: { f: f, p: @page, col: 3 }

  .row
    .large-12.columns
      .form-actions
        = f.button :submit, :class=>"button large"


    .large-3.columns
      &nbsp;

