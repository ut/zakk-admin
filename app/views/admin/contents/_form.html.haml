= simple_form_for ([:admin,@content]) do |f|
  .row
    .large-12.columns
      = f.error_notification
  .row
    .large-3.columns
      &nbsp;
    .large-6.columns
      .row
        .large-2.columns
          .field
            = f.label :published
            = f.check_box :published
        .large-2.columns
          .field
            = f.input :col, :collection => col_for_select, :label => "Column", :selected => @selected_col, :input_html => { :class => '' }
        .large-2.columns
          .field
            = f.label :pos
            = f.number_field :pos
        .large-6.columns
          .field
            = f.input :page_id, :collection => page_for_select, :label => "Page", :selected => @selected_page, :input_html => { :class => '' }
      .field
        = f.input :title
      .field
        = f.input :text, :input_html => { :class => '', :rows => 5}
      .actions
        = f.button :submit, :class=>"button large"
    .large-3.columns
      &nbsp;

