= form_for @content do |f|
  - if @content.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content.errors.count, "error")} prohibited this content from being saved:"
      %ul
        - @content.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :published
    = f.check_box :published
  .field
    = f.label :pos
    = f.number_field :pos
  .field
    = f.label :col
    = f.number_field :col
  .field
    = f.label :page
    = f.text_field :page
  .actions
    = f.submit 'Save'
