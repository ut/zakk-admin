- content_for :title, "Contents"


.row
  .large-9.columns{:role => "content"}
    %h1 Contents
  .large-3.columns.right
    = link_to admin_page_path, :class => 'button tiny' do
      %i.fi-list-thumbnails
      Index aller Seiten
    = link_to new_admin_page_path, :class => 'button' do
      %i.fi-plus
      Seite anlegen
.row
  .large-12.columns{:role => "content"}
    .table-responsive
      %table.table.table-striped.table-bordered.table-hover

        %thead
          %tr
            %th Title
            %th Text
            %th Published
            %th Pos
            %th Col
            %th Page
            %th
            %th
            %th

        %tbody
          - @contents.each do |content|
            %tr
              %td= content.title
              %td= content.text.html_safe
              %td
                - if content.published
                  %i.fi-check
                - else
                  %i.fi-x
              %td= content.pos
              %td= content.col
              %td
                = link_to admin_page_path(content.page) do
                  = content.page.title
              %td
                = link_to admin_content_path(content), :class=>"button tiny" do
                  %i.fi-eye.fi-21
                  %br
                  Anzeigen
              %td
                = link_to  edit_admin_content_path(content), :class=>"button tiny" do
                  %i.fi-pencil.fi-21
                  %br
                  Bearbeiten
              %td
                = link_to admin_content_path(content), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class=>"button tiny alert" do
                  %i.fi-x.fi-21
                  %br
                  LÃ¶schen


