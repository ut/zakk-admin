= render partial: '/partials/custom_styles', locals: {program: current_program}


- if ( can? :create, Post ) && ( can? :create, Location )
  .row.hide
    .columns.large-2
      %p
        = link_to "Programs", admin_programs_url, :class=>"button"
        %br
        #{Program.all.count} Programs
    .columns.large-2
      %p
        = link_to "Posts", posts_url, :class=>"button"
        %br
        #{Post.all.count} Posts
    .columns.large-2
      %p
        = link_to "Locations", locations_url, :class=>"button"
        %br
        #{Location.all.count} Locations
    .columns.large-6
      &nbsp;

= render partial: "/partials/header"


#main_content
  .row
    .columns.large-4
      .panel
        %h3
          zakk
          %strong Programm
      - @posts_programm.each do  |p|
        - if ( p.status == 'Published' ) || ( can? :manage, Post )
          = render partial: "post", locals: { p: p }


      - if ( can? :create, Post )
        %p.panel.hint
          sorted by startdate, only future dates (and today)
      - if current_program.present? && current_program.image.url
        %div{:class=>"panel"}
          %img{:src=>"#{current_program.image.thumb.url}"}
          %p
            Aktuelles Monatsprogramm:
            = link_to program_path("current") do
              %strong #{current_program.title}
    .columns.large-4
      .panel
        %h3
          Neues im
          %strong zakk
      - @posts_neues.each do  |p|
        - if ( p.status == 'Published' ) || ( can? :manage, Post )
          = render partial: "post", locals: { p: p }
      - if ( can? :create, Post )
        %p.panel.hint
          sorted by startdate, all posts

    .columns.large-4
      - if @posts_undsonst.count > 0
        .panel
          %h3
            Und
            %strong sonst
            ?
        - @posts_undsonst.each do  |p|
          - if ( p.status == 'Published' ) || ( can? :manage, Post )
            = render partial: "post", locals: { p: p }
        - if ( can? :create, Post )
          %p.panel.hint
            sorted by startdate, only future dates (and today)
  .row
    .columns.large-4
      %p.text-right
        %span.ptext
          %a{:href=>"/"}
            %strong zakk
        %span.ptext
          %a{:href=>"/"}
            klubraum
    .columns.large-4
      #imagecredits
        - if current_program.image_credit.present?
          %span.ptext
            Bild:
            = current_program.image_credit
        - if current_program.backgroundimage_credit.present?
          %span.ptext
            - if current_program.image_credit.present? && current_program.backgroundimage_credit.present?
              Hintergrundbild:
            - else
              Bild:
            - if current_program.backgroundimage_credit_link.present?
              = link_to "#{current_program.backgroundimage_credit_link}" do
                = current_program.backgroundimage_credit
            - else
              = current_program.backgroundimage_credit
    .columns.large-4
      = render partial: "/partials/nav"
  .row
    .columns.large-12
      &nbsp;