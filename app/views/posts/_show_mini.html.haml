- klass = "panel post post_mini"
- if post.status == 'Published'
  - klass += " post_published"
- else
  - klass += " post_draft"



%div{:class=>"#{klass}"}
  .metas
    .metas_label
      - if post.status == 'Published'
        %span.label.label_status.label_status_published
          = post.status
      - else
        %span.label.label_status.label_status_draft
          = post.status
    .metas_label
      %span.label.label_ptype
        = post.ptype
  %p
    - if post.startdate
      = smart_date_display(post.startdate,post.enddate)
    - if post.location
      \|
      = post.location.title
  %p
    - if post.image.url
      %img{:src=>"#{post.image.small_thumb.url}"}
  %h4
    = link_to "#{post.title}", post
    - if can? :create, Post
      = link_to edit_post_path(post), :class=>"tiny" do
        %i.fi-pencil
      - if !post.status
        = link_to edit_post_path(post), :class=>"button tiny" do
          %i.fi-eye