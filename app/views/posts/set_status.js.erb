<% if @text %>
  $("#<%= @dom_id %>").find('.post-status').text("<%= @text %>");
<% else %>
  <% if @post.status == 'Published' %>
    $("#<%= @dom_id %>").removeClass("post_draft").addClass("post_published");
    $("#<%= @dom_id %>").find('.post-status-draft').removeClass("post-status-anchor-active").addClass("post-status-anchor");
    $("#<%= @dom_id %>").find('.post-status-published').removeClass("post-status-anchor").addClass("post-status-anchor-active");
  <% else %>
    $("#<%= @dom_id %>").removeClass("post_published").addClass("post_draft");
    $("#<%= @dom_id %>").find('.post-status-published').removeClass("post-status-anchor-active").addClass("post-status-anchor");
    $("#<%= @dom_id %>").find('.post-status-draft').removeClass("post-status-anchor").addClass("post-status-anchor-active");
  <% end %>
<% end %>
