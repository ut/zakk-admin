$(document).on('turbolinks:load', function() {

  $(document).foundation();
  console.log("admin js loaded");

  $('.fdatetimepicker').fdatetimepicker({
        language: 'de',
        startDate: '+0d',
        format: 'dd.mm.yyyy hh:ii',
  });
  $('.datetimepicker-inline').css('display', 'none');

  var bootstrapColorpicker = function() {
    console.log("bootstrapColorpicker")
    $('[data-minicolors]').each(function(i, elem) {
      var input = $(this);
      input.minicolors(input.data('minicolors'));
    });
  };

  $(bootstrapColorpicker);

  bootstrapColorpicker;

  // this should be at the very end of this script :) and with test env only!
  <% if ( Rails.env == "test" ) %>
    $('footer').append("Javascript enabled");
  <% end %>

});


