@import 'foundation-icons';
@import 'font-awesome';





/* basic page styling */
body {
  background: none repeat scroll 0 0 #888;
  font-family: 'Helvetica', sans-serif;
  font-weight: normal;
}
main {
  min-height: 600px;
  background-color: #f5b2cb;
  background-size: cover;
}
.row, section {
    margin: 0 auto;
    max-width: none;
    width: 100%;
}
.column {
  text-align: left !important;
  padding: 0  ;
 }

/* ---------------------- */

.panel {
    background-color: white;
    border: 1px dotted #000000;
    display: inline-block;
    padding: 1em;
    padding: 1em 2.5rem 0.5em 1em;
}

strong.ptext a,
span.ptext a {
  border: 1px dotted #000000;
  background-color: white;
  padding: 0.2em 0.6em;
  margin-right: 0.2em;
  text-transform: lowercase;
  text-decoration: none;
}
span.ptext a:hover {
  background-color: black;
  color: white;
  text-decoration: none;
}



/* ---------------------- */
/* ---------------------- */

footer {
  padding: 10px 0 0 0;
  position: static;
  bottom:0;
  right: 0;
  left: 0;
  color: #555;
  height: 50px;
  background-color: #333;
}
footer div.columns {
  padding: 0
}
footer div .row {
  background-color: #333;
  max-width: none;
  margin: 0;
}
footer .columns .row .columns {
  padding: 10px 0 0 20px;
}

footer a {
    color: #555;
}
footer:hover, footer:hover a {
  color: #ccc;
}

/* ---------------------- */
h1,h2,h3,h4,h5 {
  font-family: 'Helvetica', sans-serif;
  font-weight: bold;
  text-transform: lowercase;
}
h1 a,h2 a,h3 a,h4 a,h5 a{
  text-decoration: none
}
h1 strong,h2 strong,h3 strong,h4 strong,h5 strong {
  font-family: 'Helvetica', sans-serif;
  font-weight: bold

}

h1 {
    font-size: 1.75rem;
    font-size: 4.25rem;
}
h3 { font-size: 1.775rem;
}
h4 {   font-size: 1.775rem;
  }

.panel h4 {
  margin: 0rem 0 0.5rem 0;
  line-height: 2.75rem;
  color: #666;
}
.panel h3 a, .panel h4 a, .panel h5 a{
  text-decoration: none;
  color: #333;
  border-bottom: 3px solid #333;
}


ol {
  list-style-type: none;
  margin-left: 0;
}
p {
    font-size: 1.25rem;
    line-height: 1.65rem;
    margin-bottom: 0.65rem;
}
hr {
  border-color: #000;
}
strong {
  color: #E50066;
}
/* ---------------------- */


.alert-box.round, .authform #error_explanation.round:not(:empty) {
    border-radius: 0;
    margin-top: 20px;
}

small {
    font-size: 80%;
    text-transform: uppercase;
    line-height: inherit;
}
a {
    color: black;
    line-height: inherit;
    text-decoration: underline;
}
a:hover {
  color: #555;
}


header a {
    color: white;
    line-height: inherit;
    text-decoration: none;
}


/*--------------------*/
a.post {
  display: block;
}

/*--------------------*/
tr.tr_draft,
tr.tr_draft td
 {
  background-image: url(<%= asset_path 'stripe.png' %>);
}
td.post_draft,

.post.post_draft {
  background-image: url(<%= asset_path 'stripe.png' %>);
}


/*--------------------*/
.post-switch {
    width: 100px;
}
td .post-switch {
  a.post-edit {
    display: none;
  }

}

div.panel .post-switch {
    display: inline;
    float: right;
    width: 22px;

    a.button.tiny {
      padding: 0;
    }
    .post-status-text {
      display: none;
    }
}


/*--------------------*/
.post.post_published {
}

.post-status-anchor {
  display: none;
}
.post-status-anchor-active {
  display: block;
}
.post-status-publish {
  background-color: #008cba;
}
.post-status-publish:hover .fi-eye::before {
  content: "";
}

.post-status-draft {
  background-color: grey;
}
.post-status-draft:hover .fi-eye::before {
    content: "";
}

/*--------------------*/

.post .metas {
  position: absolute;
  right: 0;
  margin-right: -45px;
  div.metas_label {
  }

  span.label {
    text-align: left;
    margin-bottom: 0.5em;
    float: left;
    display: block;
  }

}
span.label_status,
span.label_status_draft
 {
  background-color: grey
}
span.label_status_ready
 {
  background-color: #B779C6
}
span.label_status_published
 {
  background-color: #C9A35C
}
/*--------------------*/
button.disabled, button[disabled], .button.disabled, .disabled.submit, .disabled.button-xs, .button[disabled], .submit[disabled], .button-xs[disabled]
{ background-color: #aaa !important; }

button.disabled:hover, button.disabled:focus, button[disabled]:hover, button[disabled]:focus, .button.disabled:hover, .disabled.submit:hover, .disabled.button-xs:hover, .button.disabled:focus, .disabled.submit:focus, .disabled.button-xs:focus, .button[disabled]:hover, .submit[disabled]:hover, .button-xs[disabled]:hover, .button[disabled]:focus, .submit[disabled]:focus, .button-xs[disabled]:focus

{ background-color: #aaa !important; }

/*--------------------*/
input[type="file"], input[type="checkbox"], input[type="radio"], select {
    margin: 0 1rem 1rem 1rem;
}
select {
    margin: 0 1rem 1rem 0;
}

/*--------------------*/


table {
    background: #888 none repeat scroll 0 0;
    border: 0px solid #dddddd;
}

table tr td:first-child {
  border-left: 10px solid white;
}
table tr.published td:first-child {
  border-left: 10px solid #cccccc;
}
table tr.current td:first-child {
  border-left: 10px solid #008CBA;
}

/*--------------------*/
img.small_thumb {
  width: 50px;
  height: 50px;
}
img.medium_thumb {
  width: 150px;
  height: 150px;
  max-width: 150px;
}

img.medium_thumb.placeholder_thumb {
    filter: blur(3px);
}

div.panel img {
  margin-bottom: 1rem;
}
/*--------------------*/
div.input {
    background: white none repeat scroll 0 0;
    margin-bottom: 1.05rem;
    padding: 0.15rem 1.05rem;
}
div.input.hidden {
    margin: 0;
    padding: 0;
    display: none;
}
div.input.file.post_image {
    min-height: 276px;
}
label {
    color: #4d4d4d;
    cursor: pointer;
    display: block;
    font-size: 0.805rem;
    font-weight: bold;
    letter-spacing: 0rem;
    line-height: 1.5;
    margin-bottom: 0;
    padding: 0.5rem 0rem;
    text-transform: unset;
}
/*--------------------*/
input.input-large {
    font-size: 2rem;
    height: 3.2rem;
}
input, textarea {
  border: 1px dotted black !important;
}

/*--------------------*/
.datetimepicker.dropdown-menu td.disabled {
  color: grey;
}
.datetimepicker.dropdown-menu td.active {

  font-weight: bold;
}
/*--------------------*/

.minicolors-theme-default .minicolors-input {
    height: 30px !important;
    width: auto;
    display: inline-block;
    padding: 5px 0 0px 35px !important;
}

/*--------------------*/
#sessions main .row,
#passwords main .row,
#passwords main .row

 {
    background-color: white;
    margin: 100px auto;
    padding: 20px;
    max-width: 400px;
    width: 400px;
}
/*--------------------*/
#error_explanation {
    background-color: white;
    padding: 5px 10px;
   h2 {
    color: #cc0000;
    font-size: 1.2rem;
    font-weight: normal;
    line-height: 1.6;
    text-transform: unset;
  }
}

/*--------------------*/
/* foundation icon sizes */
.fi-21 { font-size: 21px;}
.fi-24 { font-size: 24px;}
.fi-32 { font-size: 32px;}
.fi-64 { font-size: 64px;}


