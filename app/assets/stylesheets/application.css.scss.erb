#flyer_wall {
    height: 400px;
    overflow: hidden;
    width: 100%;
}
#flyer_wall div.flyer {
    float: left;
    width: 10%;

  display: block;
  position: static;
  top: auto;
  height: auto;
  width: 10%;
  background: transparent;
  z-index: 8999;
  text-align: center;
}
#flyer_wall div.flyer img {
    float: left;
    max-height: 300px;
    min-height: 300px;
    width: auto;
    top: 100px;
    margin-top: 40px;
    position: relative;
    opacity: 0.9;
    transform: scale(0.8);
    filter:  brightness(80%);
    transition: all 2s ease-in-out;
    z-index: 9000;
}
/* #flyer_wall div.flyer:hover img,
*/
#flyer_wall .flyer.hover img {
    margin-top: -65px;
    opacity: 1;
    transform: scale(3);
    filter:  brightness(100%);
    transition: all 2s;
    cursor: pointer;
    transform: scale(1.2) rotate(0deg) !important;
    z-index: 9001;
}

#flyer_wall .flyer img.medium_thumb.placeholder_thumb {
    max-width: 600px;
}

