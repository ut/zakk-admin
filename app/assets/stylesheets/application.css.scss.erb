/* ---------------------- */

.panel {
    background-color: white;
    border: 1px dotted #000000;
    display: inline-block;
    padding: 0.6em 2.5rem 0.7em 0.7em;
    .content {
      min-width: 280px;
    }
}
// special for event > show view
