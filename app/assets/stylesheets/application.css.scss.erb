/* basic page styling */
body {
  background: none repeat scroll 0 0 #888;
  font-family: 'Helvetica', sans-serif;
  font-weight: normal;
}
main {
  min-height: 600px;
  background-color: #f5b2cb;
  background-size: cover;
  padding: 0;
}
.row, section {
    margin: 0 auto;
    max-width: none;
    width: 100%;
}
.column {
